{
  "name": "OpenPIMS",
  "description": "No more cookie banner",
  "version": "0.1.0",
  "author": "Stefan BÃ¶ck",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "openpims.png"
  },
  "action": {
    "default_icon": "openpims.png",
    "default_popup": "action.html",
    "default_title": "OpenPIMS"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "webRequest",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
